<Window x:Class="AdminTools.Link_DeLinkChild"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="win_Link_DeLinkChild" Height="300" Width="525"
        AllowsTransparency="True"
        WindowStyle="None"
        Padding="0"
        WindowStartupLocation="CenterScreen" Background="#FFE4E8EE">
    <Border BorderBrush="LightBlue" BorderThickness="2" Width="525" Height="300" ClipToBounds="True">
        <Grid>
            <TextBox x:Name="txt_GuardianID" Height="25" Margin="188,58,187,0" VerticalAlignment="Top" Background="#FFE6EAE0" FontSize="14" TabIndex="0" MaxLength="6" ToolTip="Guardian ID goes here." VerticalContentAlignment="Center" GotFocus="SelectAllGotFocus" KeyUp="Key_Up_Event"/>
            <TextBox x:Name="txt_GuardianID2" Height="25" Margin="188,110,187,0" VerticalAlignment="Top" Background="#FFE6EAE0" FontSize="14" TabIndex="1" MaxLength="6" ToolTip="Guardian ID goes here." VerticalContentAlignment="Center" GotFocus="SelectAllGotFocus" KeyUp="Key_Up_Event"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_Enter" Content="_Enter" Margin="40,186,305,50" Click="btn_Enter_Click" FontSize="16" ToolTip="Links or De-Links the child from the Guardian ID entered above." TabIndex="2"/>
            <Label Content="Please enter the Guardian ID of the person you wish to link or un-link your child." Margin="6,10,5,0" VerticalAlignment="Top" FontSize="14"/>
            <Label Content="Guardian ID:" HorizontalAlignment="Left" Margin="96,54,0,0" VerticalAlignment="Top" FontSize="14"/>
            <Label Content="Re-enter Guardian ID:" HorizontalAlignment="Left" Margin="39,106,0,0" VerticalAlignment="Top" FontSize="14"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_Cancel" Content="_Close" Margin="305,186,40,50" Click="btn_Cancel_Click" FontSize="16" ToolTip="Closes the window. Does not save. " TabIndex="3"/>
        </Grid>
    </Border>
</Window>
