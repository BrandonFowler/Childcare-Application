<Window x:Class="ChildCareAppParentSide.win_ChildLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ChildCareAppParentSide"
        Title="Child Check In" Height="373" Width="694">
    <Grid>
        <Button x:Name="btn_LogOutParent" Content="Log Out" HorizontalAlignment="Left" Margin="570,294,0,0" VerticalAlignment="Top" Width="75" Click="btn_LogOutParent_Click"/>
        <ListBox x:Name="lst_CheckInBox" HorizontalAlignment="Left" Height="130" Margin="41,184,0,0" VerticalAlignment="Top" Width="452" ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type local:Child}">
                    <StackPanel>
                        <TextBlock Margin="3" Text="{Binding name}"/>
                        <ContentControl Margin="3" Content="{Binding image}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
