<Window x:Class="ChildCareAppParentSide.win_EnterID"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ID Entry" Height="800" Width="1280">
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Width="292" Height="176">
            <TextBox x:Name="txt_ID" HorizontalAlignment="Left" Height="23" Margin="85,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" MaxLength="6"/>
            <Label x:Name="lbl_ID" Content="Enter ID" HorizontalAlignment="Left" Margin="120,48,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btn_Enter" Content="Enter" HorizontalAlignment="Left" Margin="97,116,0,0" VerticalAlignment="Top" Width="96" Click="btn_Enter_Click"/>
            <Button x:Name="btn_Keyboard" Content="Keyboard" HorizontalAlignment="Left" Margin="0,156,0,0" VerticalAlignment="Top" Width="103" Click="btn_Keyboard_Click" IsEnabled="False" Visibility="Hidden"/>
        </Grid>
    </Viewbox>
</Window>
