        Title="Administrator Log In" Height="291.268" Width="274.149">
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid>
            <Button x:Name="btn_Exit" Content="Back" HorizontalAlignment="Left" Margin="179,230,0,0" VerticalAlignment="Top" Width="77" Click="btn_Exit_Click"/>
