<Window x:Name="win_Login" x:Class="ChildCareAppParentSide.win_AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrator Log In" Height="530" Width="915">
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Width="460" Height="255">
            <Button x:Name="btn_Exit" Content="Back" HorizontalAlignment="Left" Margin="193,225,0,0" VerticalAlignment="Top" Width="77" Click="btn_Exit_Click"/>
            <Label x:Name="lbl_UserName" Content="User Name" HorizontalAlignment="Left" Margin="153,29,0,0" VerticalAlignment="Top" Width="104"/>
            <Label x:Name="lbl_Password" Content="Password" HorizontalAlignment="Left" Margin="153,96,0,0" VerticalAlignment="Top" Width="85"/>
            <TextBox x:Name="txt_UserName" Height="23" Margin="153,60,161,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="10"/>
            <TextBox x:Name="txt_Password" Height="23" Margin="153,122,161,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="10"/>
            <Button x:Name="btn_Login" Content="Log In" Margin="193,174,190,0" VerticalAlignment="Top" Click="btn_Login_Click"/>
        </Grid>
    </Viewbox>
</Window>
