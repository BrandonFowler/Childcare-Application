<Window x:Class="ChildCareAppParentSide.win_EnterNewPin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pin Entry" Height="800" Width="1280">
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Width="330" Height="198">
            <PasswordBox x:Name="pw_pinBox1" HorizontalAlignment="Left" Margin="67,72,0,0" VerticalAlignment="Top" Height="20" Width="65" MaxLength="4" RenderTransformOrigin="0.187,0.483"/>
            <Label x:Name="lbl_pinBox1" Content="Enter Pin" HorizontalAlignment="Left" Margin="67,45,0,0" VerticalAlignment="Top" Width="65" Height="27"/>
            <PasswordBox x:Name="pw_pinBox2" HorizontalAlignment="Left" Margin="203,72,0,0" VerticalAlignment="Top" Height="20" Width="65" MaxLength="4"/>
            <Label x:Name="lbl_pinBox2" Content="Re-Enter Pin" HorizontalAlignment="Left" Margin="203,45,0,0" VerticalAlignment="Top" Width="89" Height="27" RenderTransformOrigin="1.188,0.669"/>
            <Button x:Name="btn_Enter" Content="Enter" HorizontalAlignment="Left" Margin="130,132,0,0" VerticalAlignment="Top" Width="75" Height="36" Click="btn_Enter_Click"/>
            <Button x:Name="btn_Keyboard" Content="Keyboard" HorizontalAlignment="Left" Margin="0,178,0,0" VerticalAlignment="Top" Width="103" Click="btn_Keyboard_Click" IsEnabled="False" Visibility="Hidden"/>

        </Grid>
    </Viewbox>
</Window>
