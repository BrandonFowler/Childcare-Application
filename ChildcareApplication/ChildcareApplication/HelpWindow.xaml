<Window x:Class="ChildcareApplication.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HelpWindow" Height="660" Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Padding="0"
        WindowStartupLocation="CenterScreen" Background="#FFE4E8EE">
    <Border BorderBrush="LightBlue" BorderThickness="2" ClipToBounds="True">
        <Grid Height="660" Width="800" VerticalAlignment="Bottom" Margin="-2">
            <Button x:Name="btn_Close" Style="{DynamicResource GlassButton}" Content="Close" HorizontalAlignment="Left" Margin="715,621,0,0" VerticalAlignment="Top" Width="75" IsTabStop="False" IsCancel="True"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="This is where the PDF will load??" VerticalAlignment="Top" FontSize="136" Height="606" Width="780" Foreground="White" TextAlignment="Center">
                <TextBlock.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFE43A3A" Offset="1"/>
                    </RadialGradientBrush>
                </TextBlock.Background>
            </TextBlock>

        </Grid>
    </Border>
</Window>
