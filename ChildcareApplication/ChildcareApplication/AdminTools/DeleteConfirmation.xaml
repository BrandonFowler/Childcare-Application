<Window x:Class="AdminTools.DeleteConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="win_DeleteConformation" Height="144" Width="372">
    <Grid>
        <Label x:Name="lbl_AreYouSure" Content="Are you sure you wish to delete this person?" HorizontalAlignment="Left" Margin="61,24,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Yes" Content="YES" HorizontalAlignment="Left" Margin="71,70,0,0" VerticalAlignment="Top" Width="75" Click="btn_Yes_Click"/>
        <Button x:Name="btn_No" Content="No" HorizontalAlignment="Left" Margin="210,70,0,0" VerticalAlignment="Top" Width="75" Click="btn_No_Click"/>

    </Grid>
</Window>
