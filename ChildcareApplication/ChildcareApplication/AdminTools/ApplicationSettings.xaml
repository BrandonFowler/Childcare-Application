            <TextBox x:Name="txt_SunOpening" HorizontalAlignment="Left" Margin="484,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" TabIndex="21" GotFocus="SelectAllonFocus" LostFocus="txt_SunOpening_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="Time of day when you open (hh:mm)" KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
