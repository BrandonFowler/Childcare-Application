            <CheckBox x:Name="chk_SunClosed" Content="" HorizontalAlignment="Left" Margin="353,472,0,0" VerticalAlignment="Top" IsTabStop="False" Checked="chk_SunClosed_Checked" Unchecked="chk_SunClosed_Unchecked" Background="#FFE6EAE0" FontSize="14" ToolTip="Check if closed on Sunday" VerticalContentAlignment="Center"/>
