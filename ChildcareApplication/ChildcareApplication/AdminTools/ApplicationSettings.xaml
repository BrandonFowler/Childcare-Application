            <CheckBox x:Name="chk_SatClosed" Content="" HorizontalAlignment="Left" Margin="347,224,0,0" VerticalAlignment="Top" IsTabStop="False" Checked="chk_SatClosed_Checked" Unchecked="chk_SatClosed_Unchecked" Background="#FFE6EAE0"/>
