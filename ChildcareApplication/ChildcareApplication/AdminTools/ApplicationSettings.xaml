            <TextBox x:Name="txt_Status" HorizontalAlignment="Left" Height="23" Margin="374,317,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AllowDrop="False" IsHitTestVisible="False" TabIndex="99" IsUndoEnabled="False" IsReadOnly="True" FontWeight="Bold" Background="#FFE6EAE0"/>

        </Grid>
