            <TextBox x:Name="txt_InfantAge" HorizontalAlignment="Left" Margin="74,341,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="4" GotFocus="SelectAllonFocus" LostFocus="txt_InfantAge_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="The maximum age a child falls into the infant billing category." KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center"/>
            <Label x:Name="lbl_RegularAge" Content="Regular Age End (in years)" HorizontalAlignment="Left" Margin="78,396,0,0" VerticalAlignment="Top" FontSize="14" Height="29"/>
            <TextBox x:Name="txt_RegularAge" HorizontalAlignment="Left" Margin="74,430,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="5" GotFocus="SelectAllonFocus" LostFocus="txt_RegularAge_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="The maximum age a child falls under the regular care billing category." KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center"/>
            <TextBox x:Name="txt_Status" HorizontalAlignment="Left" Margin="374,607,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AllowDrop="False" IsHitTestVisible="False" TabIndex="99" IsUndoEnabled="False" IsReadOnly="True" FontWeight="Bold" Background="#FFE6EAE0" FontSize="14" Height="25" VerticalContentAlignment="Center"/>
            <Label x:Name="lbl_defaultReportFolder" Content="Default report folder" HorizontalAlignment="Left" Margin="96,486,0,0" VerticalAlignment="Top" FontSize="14" Height="29"/>
            <TextBox x:Name="txt_defaultReportFolder" HorizontalAlignment="Left" Margin="106,522,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="5" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="The default folder to save reports to." IsTabStop="False" AllowDrop="False" Focusable="False" VerticalContentAlignment="Center"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_selectFolder" Content="Select" HorizontalAlignment="Left" Margin="26,520,0,0" VerticalAlignment="Top" Width="75" TabIndex="6" Click="btn_selectFolder_Click" IsTabStop="False" FontSize="16" ToolTip="Select a new folder"/>

