            <Label x:Name="lbl_ExpirationDays" Content="Number of Days to Hold Expired Records" HorizontalAlignment="Left" Margin="32,216,0,0" VerticalAlignment="Top" FontSize="14" Height="29"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_Confirm" Content="Confirm" HorizontalAlignment="Left" Margin="213,605,0,0" VerticalAlignment="Top" Width="75" TabIndex="7" Click="btn_Confirm_Click" IsTabStop="False" FontSize="16" ToolTip="Confirm and save changes."/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="38,605,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" TabIndex="8" IsTabStop="False" FontSize="16" ToolTip="Cancel any unsaved changed and return to the administration menu."/>
            <TextBox x:Name="txt_MaxMonthlyFee" HorizontalAlignment="Left" Margin="74,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="2" GotFocus="SelectAllonFocus" LostFocus="txt_MaxMonthlyFee_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="The maximum charge to be applied in each billing cycle, can be 0 or any positive number." KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center"/>
            <TextBox x:Name="txt_BillingDate" HorizontalAlignment="Left" Margin="74,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="1" GotFocus="SelectAllonFocus" LostFocus="txt_BillingDate_LostFocus" KeyUp="EnterKeyUpEvent" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="Enter a day of the month from 1 to 29" VerticalContentAlignment="Center"/>
