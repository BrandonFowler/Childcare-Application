            <TextBox x:Name="txt_TueClosing" HorizontalAlignment="Left" Margin="630,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" TabIndex="12" GotFocus="SelectAllonFocus" LostFocus="txt_TueClosing_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="Time of day when you close (hh:mm)" KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <TextBox x:Name="txt_ThuClosing" HorizontalAlignment="Left" Margin="630,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" TabIndex="16" GotFocus="SelectAllonFocus" LostFocus="txt_ThuClosing_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="Time of day when you close (hh:mm)" KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <TextBox x:Name="txt_FriClosing" HorizontalAlignment="Left" Margin="630,343,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" TabIndex="18" GotFocus="SelectAllonFocus" LostFocus="txt_FriClosing_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="Time of day when you close (hh:mm)" KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <TextBox x:Name="txt_SatClosing" HorizontalAlignment="Left" Margin="630,403,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" TabIndex="20" GotFocus="SelectAllonFocus" LostFocus="txt_SatClosing_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="Time of day when you close (hh:mm)" KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <TextBox x:Name="txt_SunClosing" HorizontalAlignment="Left" Margin="630,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" TabIndex="22" GotFocus="SelectAllonFocus" LostFocus="txt_SunClosing_LostFocus" Background="#FFE6EAE0" FontSize="14" Height="25" ToolTip="Time of day when you close (hh:mm)" KeyUp="EnterKeyUpEvent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
