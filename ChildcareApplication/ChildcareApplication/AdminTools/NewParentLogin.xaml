<Window x:Name="win_NewParent" x:Class="AdminTools.NewParentLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="win_NewParentLogin" Height="300" Width="500"
        AllowsTransparency="True"
        WindowStyle="None"
        Padding="0"
        WindowStartupLocation="CenterScreen" Background="#FFE4E8EE">
    <Border BorderBrush="LightBlue" BorderThickness="2" Width="500" Height="300" ClipToBounds="True">
        <Grid>
            <TextBox x:Name="txt_ParentID1" HorizontalAlignment="Left" Height="29" Margin="80,58,0,0" TextWrapping="Wrap" Text="Enter your ID" VerticalAlignment="Top" Width="120" GotFocus="txt_ParentID1_GotFocus" GotMouseCapture="txt_ParentID1_GotMouseCapture" Background="#FFE6EAE0" FontSize="14"/>
            <TextBox x:Name="txt_ParentID2" Height="29" Margin="80,123,296,0" TextWrapping="Wrap" Text="Enter you ID again" VerticalAlignment="Top" GotFocus="txt_ParentID2_GotFocus" GotMouseCapture="txt_ParentID2_GotMouseCapture" Background="#FFE6EAE0" FontSize="14"/>
            <PasswordBox x:Name="psw_ParentPIN1" Margin="352,58,60,0" VerticalAlignment="Top" Height="29" GotFocus="psw_ParentPIN1_GotFocus" GotMouseCapture="psw_ParentPIN1_GotMouseCapture" Background="#FFE6EAE0" FontSize="14"/>
            <PasswordBox x:Name="psw_ParentPIN2" Margin="352,123,60,0" VerticalAlignment="Top" Height="29" Background="#FFE6EAE0" FontSize="14"/>
            <Label Content="Parent ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,58,0,0" FontSize="14"/>
            <Label Content="Parent ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,123,0,0" FontSize="14"/>
            <Label Content="Parent PIN" VerticalAlignment="Top" Margin="255,58,175,0" FontSize="14"/>
            <Label Content="Parent PIN" VerticalAlignment="Top" Margin="255,123,175,0" FontSize="14"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_AddNewParent" Content="Add New Parent" HorizontalAlignment="Left" Margin="35,201,0,35" Width="150" Click="btn_AddNewParent_Click" FontSize="16"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_Cancel" Content="Cancel" Margin="311,201,35,35" Click="btn_Cancel_Click" FontSize="16"/>
            <Label Content="Enter the Guardian ID as it appears on their Club Card. Then, pick a PIN" Margin="18,10,17,0" VerticalAlignment="Top" FontSize="14"/>

        </Grid>
    </Border>
</Window>
