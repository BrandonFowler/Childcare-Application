<Window x:Class="ChildcareApplication.UserSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserSelection" Height="216" Width="339"
        AllowsTransparency="True"
        WindowStyle="None"
        Padding="0"
        WindowStartupLocation="CenterScreen" Background="#FFE4E8EE">
    <Border BorderBrush="#FFE4ECEE" BorderThickness="2" Width="339" Height="216" ClipToBounds="True">
        <Grid>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_ParentUse" Content="_Guardian Login" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="140" Height="57" FontSize="16" Click="btn_ParentUse_Click" TabIndex="0"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_AdminLogin" Content="_Administrator Login" Margin="181,61,10,0" VerticalAlignment="Top" Height="57" FontSize="14" Click="btn_AdminLogin_Click" TabIndex="1"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_Exit" Content="_Exit" HorizontalAlignment="Left" Margin="241,155,0,0" VerticalAlignment="Top" Width="75" Click="btn_Exit_Click" TabIndex="2" FontSize="14"/>

        </Grid>
    </Border>
</Window>
