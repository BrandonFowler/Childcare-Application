<Window x:Class="ChildcareApplication.UserSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserSelection" Height="244.364" Width="257.182"
        AllowsTransparency="True"
        WindowStyle="None"
        Padding="0"
        WindowStartupLocation="CenterScreen" Background="#FFE4E8EE">
    <Border BorderBrush="LightBlue" BorderThickness="2" ClipToBounds="True">
        <Grid Height="224" VerticalAlignment="Bottom" Margin="8,0,8,8">
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_ParentUse" Content="_Guardian Login" Margin="33,27,34,0" VerticalAlignment="Top" Height="57" FontSize="16" Click="btn_ParentUse_Click" TabIndex="0"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_AdminLogin" Content="_Administrator Login" Margin="33,107,34,0" VerticalAlignment="Top" Height="57" FontSize="16" Click="btn_AdminLogin_Click" TabIndex="1"/>
            <Button Style="{DynamicResource GlassButton}" x:Name="btn_Exit" Content="_Exit" HorizontalAlignment="Left" Margin="152,185,0,0" VerticalAlignment="Top" Width="75" Click="btn_Exit_Click" TabIndex="2" FontSize="16"/>

        </Grid>
    </Border>
</Window>
